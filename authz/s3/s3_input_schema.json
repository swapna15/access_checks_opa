{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["user", "resource", "action"],
  "properties": {
    "user": {
      "type": "object",
      "required": ["id", "role"],
      "properties": {
        "id": { "type": "string" },
        "role": { "type": "string" }
      }
    },
    "resource": {
      "type": "object",
      "required": ["type", "id"],
      "properties": {
        "type": { "type": "string" },
        "id": { "type": "string" }
      }
    },
    "action": { "type": "string" }
  }
}
